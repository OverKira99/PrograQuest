<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginTop="32dp"
    android:padding="16dp">

    <!-- Filtro por tema -->
    <Spinner
        android:id="@+id/spinnerSelectTopic"
        android:layout_width="match_parent"
        android:layout_height="37dp"
        android:layout_marginBottom="16dp"
        android:entries="@array/topics_array" />

    <TextView
        android:id="@+id/textViewQuestion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Pregunta"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginBottom="8dp" />

    <TextView
        android:id="@+id/textViewCode"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="C贸digo de ejemplo"
        android:layout_marginBottom="8dp" />

    <RadioGroup
        android:id="@+id/radioGroupAnswers"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp">

        <RadioButton
            android:id="@+id/radioButtonAnswer1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Opci贸n 1" />

        <RadioButton
            android:id="@+id/radioButtonAnswer2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Opci贸n 2" />

        <RadioButton
            android:id="@+id/radioButtonAnswer3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Opci贸n 3" />
    </RadioGroup>

    <Button
        android:id="@+id/buttonSubmit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/blue"
        android:text="Enviar" />
</LinearLayout>
